<h1>My tasks</h1>

<% @tasks.each do |task| %>
<div>
  <% if task.completed %>
    <i class="far fa-check-square"></i>
  <% else %>
    <i class="far fa-square"></i>
  <% end %>
  <label for="task"><%= link_to(task.title, task_path(task)) %></label>
</div>
<% end %>
<br>
<span><i class="fas fa-plus" style="margin:5px;"></i><%= link_to 'Add a new task', new_task_path %></span>
